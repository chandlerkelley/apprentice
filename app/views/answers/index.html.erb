<p id="notice"><%= notice %></p>
<div class="container">
  <div class="main">
    <div class="answer-head">
      <h1>Q&A</h1>
      <div class="answer-links">
        <%= link_to "New Question", new_answer_path %>
        <%= link_to "Home", root_path %>
      </div>
    </div>
    <div class="answer-body">
      <% @answers.each do |answer| %>
        <p><b><%= answer.question %></b></p>
        <p><%= answer.answer %></p>
        <br>
      <% end %>
    </div>
  </div>
</div>



<h1>Listing Answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question %></td>
        <td><%= answer.answer %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
